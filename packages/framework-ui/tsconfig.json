{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "lib",
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "allowJs": false,
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}