{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "paths": {
            "common/src/*": ["../common/lib/*"]
        },
        "plugins": [
            { "transform": "typescript-transform-paths", "useRootDirs": true },
            { "transform": "typescript-transform-paths", "useRootDirs": true, "afterDeclarations": true }
        ]
    }
}
