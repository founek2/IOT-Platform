{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "dist",
        "target": "ES2018",
        "composite": true,
        "moduleResolution": "node",
        "alwaysStrict": false,
        "lib": [
            "esnext.asynciterable",
            "DOM" // were problems with @testing-library
        ]
    },
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../common"
        }
    ],
}