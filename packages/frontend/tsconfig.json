{
    "extends": "../../tsconfig-base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./",
        "outDir": "dist",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react"
        // "allowSyntheticDefaultImports": true,
        // "noFallthroughCasesInSwitch": true,
        // "strict": true
    },
    "references": [
        {
            "path": "../common/tsconfig.json"
        }
    ],
    "include": [
        "src",
        "custom.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}