{
    "name": "iot-platforma",
    "license": "GPL-3.0-only",
    "author": "Martin Skalick√Ω",
    "private": true,
    "scripts": {
        "build": "tsc -b packages/backend/tsconfig.build.json packages/backend-mqtt/tsconfig.build.json packages/backend-auth/tsconfig.build.json && yarn workspaces foreach --all run copyFiles && yarn workspace frontend build",
        "clean": "yarn workspaces foreach --all run clean",
        "test": "yarn workspaces foreach --all run test",
        "build:shared": "tsc -b packages/framework-ui packages/common/tsconfig.build.json",
        "dev:be": "yarn workspace backend dev",
        "dev:mqtt": "yarn workspace backend-mqtt dev",
        "dev:auth": "yarn workspace backend-auth dev",
        "dev:fe": "yarn workspace frontend dev"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "typescript": "^4.7.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "packageManager": "yarn@3.6.2",
    "dependencies": {
        "node-gyp": "^9.4.0"
    }
}
