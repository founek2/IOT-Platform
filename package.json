{
    "name": "iot-platforma",
    "license": "GPL-3.0-only",
    "author": "Martin Skalick√Ω",
    "private": true,
    "scripts": {
        "prepare": "ts-patch install",
        "build:packages": "tsc -b packages/backend/tsconfig.build.json packages/backend-mqtt/tsconfig.build.json packages/backend-auth/tsconfig.build.json && yarn workspaces foreach --all run copyFiles && yarn workspace frontend build",
        "clean:all": "yarn workspaces foreach --all -pt run clean",
        "test": "yarn workspaces foreach --all -pt run test",
        "build:common": "tsc -b packages/common",
        "dev:be": "yarn workspace backend dev",
        "dev:mqtt": "yarn workspace backend-mqtt dev",
        "dev:auth": "yarn workspace backend-auth dev",
        "dev:fe": "yarn workspace frontend dev"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "ts-patch": "^3.0.2",
        "typescript": "^5.2.2",
        "typescript-transform-paths": "^3.4.6"
    },
    "workspaces": [
        "packages/*"
    ],
    "packageManager": "yarn@3.6.2",
    "dependencies": {
        "node-gyp": "^9.4.0"
    }
}
