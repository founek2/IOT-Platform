{
  "name": "iot-platforma",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "src/modules/*"
  ],
  "scripts": {
    "buildFE": "env GENERATE_SOURCEMAP=false node scripts/build.js",
    "buildBE": "babel src/modules -d distBE",
    "build": "scripts/deploy.sh build",
    "test_unused": "node scripts/test.js",
    "test": "nyc --reporter=lcov env IOT_IMAGES_PATH=${PWD}/public/images mocha ./src/modules/backend/test ./src/modules/framework-ui/test ./src/modules/framework/test --require @babel/register --reporter mocha-junit-reporter --reporter spec",
    "mochaBackend": "env IOT_IMAGES_PATH=${PWD}/public/images mocha ./src/modules/backend/test --require @babel/register",
    "mochaFrontend": "env IOT_IMAGES_PATH=${PWD}/public/images mocha ./src/modules/frontend/test",
    "mochaFramework-ui": "env IOT_IMAGES_PATH=${PWD}/public/images mocha ./src/modules/framework-ui/test --require @babel/register",
    "mochaFramework": "env IOT_IMAGES_PATH=${PWD}/public/images mocha ./src/modules/framework/test --require @babel/register",
    "devFE": "node scripts/start.js",
    "devBE": "nodemon --watch src/modules/backend  --watch src/modules/framework --exec env IOT_IMAGES_PATH=${PWD}/public/images babel-node ./src/modules/backend/src/index.js ",
    "devBE-mqtt": "nodemon --watch src/modules/backend --watch src/modules/backend-mqtt --exec babel-node ./src/modules/backend-mqtt/index.js",
    "server1": "forever start distBE/backend/index.js",
    "server2": "forever start distBE/backend-mqtt/index.js",
    "server1stop": "forever stop distBE/backend/index.js",
    "server2stop": "forever stop distBE/backend-mqtt/index.js",
    "startBE": "yarn server1 && yarn server2",
    "stopBE": "yarn server1stop && yarn server2stop",
    "reloadBE": "yarn stopBE && yarn startBE",
    "copyFE": "scripts/deploy.sh copyFE",
    "copyBE": "scripts/deploy.sh copyBE",
    "copyDocs": "scripts/deploy.sh copyDocs",
    "deploy": "scripts/deploy.sh deploy"
  },
  "dependencies": {
    "core-js": "^3.6.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.8.4",
    "@svgr/webpack": "4.1.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-named-asset-import": "^0.3.5",
    "babel-preset-react-app": "^9.1.0",
    "bfj": "6.1.1",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "css-loader": "1.0.0",
    "dotenv": "6.0.0",
    "dotenv-expand": "4.2.0",
    "eslint": "5.12.0",
    "eslint-config-react-app": "^3.0.7",
    "eslint-loader": "2.1.1",
    "eslint-plugin-flowtype": "2.50.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.12.4",
    "file-loader": "2.0.0",
    "forever": "^2.0.0",
    "fork-ts-checker-webpack-plugin-alt": "0.4.14",
    "fs-extra": "^7.0.1",
    "html-webpack-plugin": "4.0.0-alpha.2",
    "http-proxy-middleware": "^0.19.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "23.6.0",
    "jest-pnp-resolver": "1.0.2",
    "jest-resolve": "23.6.0",
    "jest-watch-typeahead": "^0.2.1",
    "mini-css-extract-plugin": "0.5.0",
    "mocha": "^6.2.0",
    "mocha-junit-reporter": "^1.23.3",
    "node-cmd": "^3.0.0",
    "nyc": "^15.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "pnp-webpack-plugin": "1.2.1",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.5.0",
    "postcss-safe-parser": "4.0.1",
    "react-app-polyfill": "^0.2.1",
    "react-dev-utils": "^7.0.3",
    "resolve": "1.10.0",
    "sass-loader": "7.1.0",
    "should": "^13.2.3",
    "style-loader": "0.23.1",
    "supertest": "^4.0.2",
    "terser-webpack-plugin": "1.2.2",
    "url-loader": "1.1.2",
    "webpack": "4.28.3",
    "webpack-dev-server": "3.8.0",
    "webpack-manifest-plugin": "2.0.4",
    "workbox-webpack-plugin": "3.6.3"
  },
  "homepage": "https://test.iotplatforma.cloud",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "500",
    "env": {
      "NODE_ENV": "development"
    }
  }
}
