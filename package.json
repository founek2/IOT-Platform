{
    "name": "iot-platforma",
    "license": "GPL-3.0-only",
    "author": "Martin Skalick√Ω",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "tsc -b packages/backend packages/backend-mqtt packages/backend-auth && lerna run --scope frontend build",
        "clean": "lerna run --parallel clean",
        "test": "lerna run --scope backend --scope backend-mqtt --scope framework-ui test",
        "watch": "lerna run --parallel --scope common --scope framework-ui dev",
        "build:shared": "tsc -b packages/framework-ui packages/common",
        "dev:be": "yarn workspace backend dev",
        "dev:fe": "yarn workspace frontend dev",
        "dev:be-mqtt": "yarn workspace backend-mqtt dev",
        "prepare": "ts-patch install -s",
        "ts-patch": "^2.0.1"
    },
    "dependencies": {
        "caniuse-lite": "^1.0.30001346"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "lerna": "^3.22.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.7.3"
    },
    "workspaces": [
        "packages/*"
    ]
}
