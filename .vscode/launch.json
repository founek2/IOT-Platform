    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "backend",
            "restart": true,
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node",
            "runtimeArgs": ["--respawn"],
            "args": ["${workspaceFolder}/packages/backend/src/index.ts"]
          },

        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "backend-mqtt",
            "restart": true,
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node",
            "runtimeArgs": ["--respawn"],
            "args": ["${workspaceFolder}/packages/backend-mqtt/src/index.ts"]
          }
    ]
}