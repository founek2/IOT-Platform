{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "paths": {
            "common/lib/*": [
                "../common/lib/*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "useRootDirs": true
            },
            {
                "transform": "typescript-transform-paths",
                "useRootDirs": true,
                "afterDeclarations": true
            }
        ]
    }
}